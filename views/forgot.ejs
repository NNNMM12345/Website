<% include ./partials/header %>
<div class="container--body">
  <div class="form__container">
    <form class="auth__form" action="/forgot" method="POST">
      <h1 class="auth__form--title">Reset Password</h1>
      <div class="form__group form__group--input">
        <div class="form__input form__input--bottom">
          <i class="fas fa-envelope input__icon"></i>
          <input class="text__input" type="email" id="email" name="email" placeholder="email address" autofocus>
        </div>
      </div>
      <input class="form__submit" type="submit" value="Reset Password">
    </form>
    <p class="auth__form--links">
      <a class="auth__form__link auth__form__link--one" href="/">Go Back</a>
      <a class="auth__form__link auth__form__link--two" href="/login">Log In</a>
      <a class="auth__form__link auth__form__link--three" href="/register">Sign Up</a>
    </p>
  </div>
</div>
<% include ./partials/footer %>